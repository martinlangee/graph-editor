<UserControl x:Class="GraphEditor.Nodes.ConfigUiHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphEditor.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Configuration" Margin="3,0"/>
        <Button Grid.Column="1" Click="CloseButton_Click" Margin="1">
            <Path Stroke="Black" Fill="Black" StrokeThickness="2" Data="M0,0 L7,7 M7,0 L0,7" Margin="2"/>
        </Button>
    </Grid>
</UserControl>
